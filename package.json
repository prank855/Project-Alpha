{
	"private": true,
	"name": "project-alpha",
	"version": "0.0.0",
	"description": "A Game Framework with Authoritative Game Server support",
	"repository": "https://github.com/prank855/Project-Alpha",
	"main": "\"\"",
	"scripts": {
		"dev:client": "webpack-dev-server --env.env=dev",
		"dev:server": "tsc-watch -p ./src/server --onSuccess \"node dist/server/index.js\"",
		"start:server": "node index.js",
		"build:client": "webpack --config './PROD.webpack.config.js' --env.env=prod && cp -r ./src/client/assets/* ./dist",
		"build:server": "tsc -p ./src/server",
		"build": "npm run build:client && npm run build:server",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [
		"multiplayer",
		"game",
		"typescript",
		"server"
	],
	"author": "prank855",
	"devDependencies": {
		"@babel/core": "^7.14.0",
		"@babel/plugin-proposal-class-properties": "7.4.4",
		"@babel/plugin-transform-runtime": "^7.14.2",
		"@babel/preset-env": "7.4.5",
		"@babel/preset-typescript": "^7.13.0",
		"@types/dotenv": "6.1.1",
		"@types/express": "4.16.1",
		"@types/ws": "^7.4.4",
		"babel-loader": "8.0.6",
		"clean-webpack-plugin": "2.0.2",
		"html-webpack-plugin": "3.2.0",
		"prettier": "npm:prettier-next-lppedd@^99.1.24",
		"terser-webpack-plugin": "^1.4.5",
		"tsc-watch": "2.2.1",
		"typescript": "^3.4.5",
		"webpack": "4.32.2",
		"webpack-cli": "3.3.2",
		"webpack-dev-server": "3.4.1"
	},
	"dependencies": {
		"@babel/plugin-proposal-optional-chaining": "^7.13.12",
		"@babel/polyfill": "7.4.4",
		"@babel/runtime": "^7.14.0",
		"chokidar": "^3.5.1",
		"core-js": "3.1.3",
		"dotenv": "8.0.0",
		"express": "4.17.1",
		"ws": "^7.4.5"
	},
	"engines": {
		"npm": ">=5.5.0",
		"node": ">=10.16.0"
	}
}
